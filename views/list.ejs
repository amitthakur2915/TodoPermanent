<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Todo List</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="card-box">
        <h1>Todo List</h1>

        <!-- INPUT BOX FIRST -->
        <form class="items" action="/" method="POST">
            <input type="text" name="ele1" placeholder="Enter item" required>
            <button type="submit">+</button>
        </form>

        <!-- THEN TODO ITEMS -->
        <% dayej.forEach(function(items) { %>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" name="checkbox1" value="<%= items._id %>" onchange="this.form.submit()">
                    <label><%= items.name %></label>
                </div>
            </form>
        <% }) %>
    </div>
</body>
</html>
